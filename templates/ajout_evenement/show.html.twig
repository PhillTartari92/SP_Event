{% extends 'base.html.twig' %}

{% block title %}Évenement{% endblock %}

{% block body %}
    <h1 class='text-center'>Évenement</h1>
<div class='container w-50 mt-4'>
    <table class="table">
        <tbody>
        
            <tr>
                <th>Id</th>
                <td>{{ ajout_evenement.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ ajout_evenement.titre }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{asset(ajout_evenement.image) }}" width="100"></td>                
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ajout_evenement.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ ajout_evenement.prix }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ ajout_evenement.ville }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ ajout_evenement.date }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ ajout_evenement.createdAt ? ajout_evenement.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            
        </tbody>
    </table>
    </div>
<div class='text-center'>
    <a href="{{ path('app_ajout_evenement_index') }}" class='btn btn-outline-primary m-2 '>Retour</a>
    <a href="{{ path('app_ajout_evenement_edit', {'id': ajout_evenement.id}) }}" class='btn btn-outline-warning '>Modifier</a>
    {{ include('ajout_evenement/_delete_form.html.twig') }}
</div>
    
{% endblock %}
