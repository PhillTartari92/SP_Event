{% extends 'base.html.twig' %}

{% block title %}S&PEvents{% endblock %}

{% block body %}
<div class="container mt-5">
<div class="row mb-5 ">
    <div class="col-5 mt-5"><div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner ms-4">
    <div class="carousel-item active">
      <img src="assets/images/singermen.jpg" class="d-block w-100 " style='height:42vh; width: 50vw' alt="...">
    </div>
    <div class="carousel-item">
      <img src="assets/images/foule.jpg" class="d-block w-100" style='height:42vh; width: 50vw' alt="...">
    </div>
    <div class="carousel-item">
      <img src="assets/images/woman.jpg" class="d-block w-100" style='height:42vh; width: 50vw' alt="...">
    </div>
  </div>
</div></div>
    <div class="col-7"><img src="assets/images/rock.jpg" alt="" style='height:55vh; width: 50vw;position:absolute'></div>
  </div>

  <div class="filtre-dropdown d-flex ">
  <h3 class='mx-2'>Evénements populaires: </h3>
  <div class="dropdown">
  <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
    Villes
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
    <li><a class="dropdown-item" href="{{path('app_filtre',{'id' : 'Marseille'})}}" >Marseille</a></li>
    <li><a class="dropdown-item" href="{{path('app_filtre',{'id' : 'Bordeaux'})}}" >Bordeaux</a></li>
    <li><a class="dropdown-item" href="{{path('app_filtre',{'id' : 'Paris'})}}" >Paris</a></li>
  </ul>
</div>
  </div>
  <div class="row mt-4">
  {% for event in events %}
<div class="col-md-3 mt-3" >
        <div class="card" >
          <img src="{{ asset(event.image) }}" class="card-img-top" alt="{{ event.titre }}" style='height:20vh'>
          <div class="card-body text-center">
            <h4 class="card-title">{{event.titre }}</h4>
            <h6 class='card-date'>{{event.ville}}  {{event.date}}</h6>
            <p class="card-text">{{event.prix }}€</p>
            <div class='card-button text-center'>
            <a href="{{path('app_fiche_evenement',{'id':event.id})}}" class="btn btn-primary">Réserver</a>
            </div>
          </div>
        </div>
      </div>
   {% endfor %}
</div>
{% endblock %}
